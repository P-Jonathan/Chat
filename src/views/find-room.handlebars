<main class="container">
    <div class="row">
        {{#each rooms}}
        <div class="col s12 m4 xl3">
            <div class="card">
                <div class="card-image">
                    <img src="{{imgUrl}}">
                    <span class="card-title black-text"><strong>{{name}}</strong></span>
                    <a href="/rooms/room/{{_id}}" class="btn-floating halfway-fab waves-effect waves-light green"><i
                            class="material-icons">subdirectory_arrow_right</i></a>
                </div>
                <div class="card-content">
                    <p>{{description}}</p>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</main>

<footer class="page-footer">
    <div class="container center">
        <div class="row">
            <div class="col s12">
                <ul class="pagination">
                    <li class="disabled"><a href="#!"><i class="material-icons">chevron_left</i></a></li>
                    <li class="active waves-effect blue"><a href="#!">1</a></li>
                    <li class="waves-effect blue"><a href="#!">2</a></li>
                    <li class="waves-effect blue"><a href="#!">3</a></li>
                    <li class="waves-effect blue"><a href="#!">4</a></li>
                    <li class="waves-effect blue"><a href="#!">5</a></li>
                    <li class="waves-effect"><a href="#!"><i class="material-icons">chevron_right</i></a></li>
                </ul>
            </div>
        </div>
    </div>
</footer>